{
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
    },
    "extends": [
      "eslint:recommended",
      "./eslint/.es6.js",
      "./eslint/.best-practices.js"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {},
    "ignorePatterns": [
      "**/yarn.lock",
      "**/*.log",
      "**/npm-debug.log*",
      "**/yarn-debug.log*",
      "**/yarn-error.log*",
      "**/node_modules/**/*.*",
      "**/*.tgz",
      "**/package-lock.json",
      "**/build/**/*.*",
      "**/build/*.*",
      "**/dist/**/*.*",
      "**/dist/*.*",
      "**/.size-snapshot.json",
      "**/packages/*/src/*-styles.js",
    ]
  }